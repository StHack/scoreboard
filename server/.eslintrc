{
  "extends": ["standard-with-typescript"],
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["warn"],
    "no-var": ["error"]
  },
  "overrides": [
    {
      "files": ["**/*.ts"],
      "rules": {
        "semi": "error"
      }
    }
  ]
}
