{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    // "module": "NodeNext",
    "strictNullChecks": true,
    "esModuleInterop": true,
    // "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,

    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  },
  "include": ["."]
}
